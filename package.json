{
  "name": "@quant/quant-protocol",
  "version": "0.6.1",
  "description": "Smart-contracts for Quant. The free, instant, DeFi crypto options trading protocol.",
  "scripts": {
    "build": "hardhat compile",
    "test": "yarn build && hardhat test",
    "eslint": "eslint . --ext ts --fix",
    "format": "prettier --write .",
    "solhint": "solhint 'contracts/**/*.sol'",
    "lint": "yarn eslint && yarn format && yarn solhint",
    "docs": "solidity-docgen --solc-module solc-0.7.6",
    "docs:uml": "node build-scripts/generateDocs.js",
    "coverage": "hardhat coverage",
    "publishToRegistry": "yarn build && ./envrun npm publish --registry $REGISTRY_URL"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Quant-Finance-HQ/quant-protocol.git"
  },
  "keywords": [
    "options",
    "ethereum",
    "smart-contracts",
    "solidity",
    "defi",
    "cryptocurrency",
    "quant"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Quant-Finance-HQ/quant-protocol/issues"
  },
  "homepage": "https://github.com/Quant-Finance-HQ/quant-protocol#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@gnosis.pm/safe-contracts": "^1.3.0",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.8.2",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.25",
    "@types/web3-eth-abi": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "chai": "^4.3.0",
    "child_process": "^1.0.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eth-sig-util": "^3.0.1",
    "ethereum-waffle": "^3.2.2",
    "ethereumjs-util": "^7.0.10",
    "ethers": "^5.1.4",
    "glob": "^7.1.7",
    "hardhat": "^2.3.0",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.7.7",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "husky": "^4.3.8",
    "path": "^0.12.7",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.4",
    "shelljs": "^0.8.4",
    "solc": "0.7.6",
    "solc-0.7.6": "npm:solc@^0.7.6",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.15",
    "solidity-docgen": "^0.5.13",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.1",
    "typescript": "^4.1.3",
    "web3-eth-abi": "^1.3.6"
  },
  "dependencies": {
    "@ethereum-waffle/chai": "^3.2.2",
    "@ethereum-waffle/mock-contract": "^3.2.2",
    "@ethereum-waffle/provider": "^3.2.2",
    "@openzeppelin/contracts": "3.4.0-solc-0.7",
    "@openzeppelin/contracts-upgradeable": "^3.4.1-solc-0.7-2",
    "@quant-finance/solidity-datetime": "^2.0.0",
    "hardhat-typechain": "^0.3.4"
  },
  "files": [
    "contracts",
    "artifacts/contracts",
    "typechain"
  ]
